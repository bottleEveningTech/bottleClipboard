<Window x:Class="Bottle_Clipboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bottle Clipboard" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Search Area -->
        <Grid Margin="10" Width="300" Height="30">
            <TextBlock x:Name="PlaceholderTextBlock"
                       Text="Search..."
                       Foreground="Gray"
                       VerticalAlignment="Center"
                       Margin="5,0,0,0"
                       IsHitTestVisible="False"
                       Visibility="Visible"/>
            <TextBox x:Name="SearchBox"
                     VerticalContentAlignment="Center"
                     TextChanged="SearchBox_TextChanged"/>
        </Grid>

        <!-- Clipboard History -->
        <ListView x:Name="ClipboardList"
                  Grid.Row="1"
                  Margin="10"
                  MouseDoubleClick="ClipboardList_MouseDoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Content" DisplayMemberBinding="{Binding Content}" Width="600"/>
                    <GridViewColumn Header="Tags" DisplayMemberBinding="{Binding Tags}" Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
